{
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2015", "dom"],
    "typeRoots" : [
      "./node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "javascript.implicitProjectConfig.experimentalDecorators": true
}
